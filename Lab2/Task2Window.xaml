<Window x:Class="Lab2.Task2Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task2Window" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="300" />
            <RowDefinition Height="Auto" MinHeight="44.96" />
            <RowDefinition Height="Auto" MinHeight="230" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,10,10">
            <Image Name="RedChannelImage" Width="200" Height="200" Margin="5" />
            <Image Name="GreenChannelImage" Width="200" Height="200" Margin="5" />
            <Image Name="BlueChannelImage" Width="200" Height="200" Margin="5" />
        </StackPanel>

        <Button Content="Load Image" Click="OnExtractChannels" Margin="360,10,340,10" Grid.Row="1" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,10,10,10">
            <Image Name="RedHistogram" Width="200" Height="200" Margin="5" />
            <Image Name="GreenHistogram" Width="200" Height="200" Margin="5" />
            <Image Name="BlueHistogram" Width="200" Height="200" Margin="5" />
        </StackPanel>
    </Grid>
</Window>