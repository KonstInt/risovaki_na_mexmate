<Window x:Class="Lab2.Task1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="Image Processing" Height="450" Width="800">
    <Grid>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
			<Button Content="Convert to Grayscale" Click="OnConvertToGrayscale" Margin="5"/>
		</StackPanel>
		<StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
		</StackPanel>
		<Image Name="ImageDisplay" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10"/>
	</Grid>
</Window>
